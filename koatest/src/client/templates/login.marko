			            	<label for="inputPassword" class="sr-only">Password</label>
			            	<input type="password" id="inputPasswordLogin" class="inputPasswordLogin form-control" name="pwd" placeholder="Password" required>
			            	<span class="glyphicon glyphicon-ok form-control-feedback password-success-feedback" aria-hidden="true" style="display: none;"></span>
		  					<span id="inputSuccess2Status" class="sr-only password-success-feedback" style="display: none;">(success)</span>
